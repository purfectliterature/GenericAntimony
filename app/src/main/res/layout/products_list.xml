<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_card_view"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="10dp"
    android:layout_marginStart="@dimen/default_margin_horizontal"
    android:layout_marginEnd="@dimen/default_margin_horizontal"
    android:layout_marginTop="@dimen/mini_margin_vertical"
    android:layout_marginBottom="@dimen/mini_margin_vertical"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="#F6F6F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            tools:text="Sample Product Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorLinkBlue" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textStyle="bold"
            tools:text="SGD 45.00"
            android:textSize="@dimen/textSize_body" />

        <TextView
            android:id="@+id/product_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            tools:text="PRODUCT CATEGORY"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>